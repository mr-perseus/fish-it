<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fishit.Presentation.UI.Views.FishingTrips.FishingTripsFormPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand">
            <Entry Text="{Binding DateTime}" />
            <Entry Text="{Binding Location}" />
            <Editor Text="{Binding Description}" />
            <Picker x:Name="WeatherPicker" Title="Select the Weather" ItemsSource="{Binding WeatherOptions}" SelectedItem="{Binding SelectedWeather}" />
            <Entry Text="{Binding TemperatureCelsius, StringFormat='{0:N}°C'}" />

            <StackLayout VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                <Button Text="Cancel" Clicked="CancelForm_OnClicked" />
                <Button Text="Save" Clicked="SaveFishingTrip_OnClicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>